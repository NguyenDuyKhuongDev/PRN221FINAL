<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background: #2c3e50;
            color: white;
            transition: width 0.3s;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px 20px;
                display: flex;
                align-items: center;
                gap: 10px;
                transition: background 0.3s;
            }

                .sidebar a:hover {
                    background: #34495e;
                }

            .sidebar i {
                font-size: 18px;
            }

        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a asp-controller="Home" asp-action="Index">
            <i class="fas fa-home"></i> <span>Home</span>
        </a>
        <a asp-controller="Account" asp-action="Index">
            <i class="fas fa-users-cog"></i> <span>Account Management</span>
        </a>
        <a asp-controller="AbsentReasons" asp-action="Index">
            <i class="fas fa-user-times"></i> <span>AbsentReason Management</span>
        </a>
        <a asp-controller="Attendances" asp-action="Index">
            <i class="fas fa-calendar-check"></i> <span>Attendance Management</span>
        </a>
        <a asp-controller="AttendanceStatus" asp-action="Index">
            <i class="fas fa-clipboard-list"></i> <span>Attendance Status Management</span>
        </a>
        <a asp-controller="Departments" asp-action="Index">
            <i class="fas fa-building"></i> <span>Departments Management</span>
        </a>
        <a asp-controller="PayRolls" asp-action="Index">
            <i class="fas fa-file-invoice-dollar"></i> <span>PayRolls Management</span>
        </a>
        <a asp-controller="PayrollStatus" asp-action="Index">
            <i class="fas fa-tasks"></i> <span>Payroll Status Management</span>
        </a>
        <a asp-controller="Positions" asp-action="Index">
            <i class="fas fa-briefcase"></i> <span>Positions Management</span>
        </a>
        <a asp-area="Identity" asp-page="/Account/Logout" class="btn btn-danger d-flex align-items-center gap-2">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
        </a>

    </div>

    <!-- Nội dung chính -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
